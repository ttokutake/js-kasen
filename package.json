{
  "name": "kasen",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:ttokutake/js-kasen.git",
  "author": "ttokutake <tadatoshi.tokutake@gmail.com>",
  "license": "MIT",
  "scripts": {
    "ncu": "ncu",
    "build": "npm run clean && webpack --bail",
    "clean": "rm -rf ./dist",
    "release": "NODE_ENV=production npm run build",
    "format": "npm run format:base -- --write",
    "format:ci": "npm run format:base -- --list-different",
    "format:base": "prettier **/*.json **/*.yml **/*.md",
    "lint": "npm run lint:ci -- --fix",
    "lint:ci": "eslint --ignore-path .gitignore .",
    "test": "npm run build && npm run test:ci",
    "test:ci": "jest"
  },
  "dependencies": {
    "hash-sum": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.27.1",
    "eslint-plugin-prettier": "^3.0.0",
    "immutable": "^3.8.2",
    "jest": "^23.6.0",
    "npm-check-updates": "^2.15.0",
    "prettier": "^1.14.3",
    "webpack": "^4.25.0",
    "webpack-cli": "^3.1.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "allowAfterSuper": true,
          "allow": [
            "__iterator"
          ]
        }
      ],
      "no-cond-assign": [
        "error",
        "except-parens"
      ]
    }
  }
}
