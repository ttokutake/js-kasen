{
  "name": "kasen",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:ttokutake/js-kasen.git",
  "author": "ttokutake <tadatoshi.tokutake@gmail.com>",
  "license": "MIT",
  "scripts": {
    "upgrade": "ncu -a",
    "audit": "# TODO: npm audit fix --force",
    "build": "npm run clean && webpack --bail",
    "clean": "rm -rf ./dist",
    "release": "NODE_ENV=production npm run build",
    "format": "npm run format:base -- --write",
    "format:ci": "npm run format:base -- --list-different",
    "format:base": "prettier --ignore-path=.gitignore '**/*.json' '**/*.yml' '**/*.md'",
    "lint": "npm run lint:ci -- --fix",
    "lint:ci": "eslint --ignore-path .gitignore .",
    "test": "npm run build && npm run test:ci",
    "test:ci": "jest"
  },
  "dependencies": {
    "hash-sum": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.1.0",
    "npm-check-updates": "^2.15.0",
    "prettier": "^1.16.4",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "allowAfterSuper": true,
          "allow": [
            "__iterator"
          ]
        }
      ],
      "no-cond-assign": [
        "error",
        "except-parens"
      ]
    }
  }
}
