{
  "name": "kasen",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:ttokutake/js-kasen.git",
  "author": "ttokutake <tadatoshi.tokutake@gmail.com>",
  "license": "MIT",
  "scripts": {
    "upgrade": "ncu -u",
    "audit": "# TODO: npm audit fix --force",
    "build": "npm run clean && webpack --bail",
    "clean": "rm -rf ./dist",
    "release": "NODE_ENV=production npm run build",
    "format": "npm run format:base -- --write",
    "format:ci": "npm run format:base -- --list-different",
    "format:base": "prettier --ignore-path=.gitignore '**/*.json' '**/*.yml' '**/*.md'",
    "lint": "npm run lint:ci -- --fix",
    "lint:ci": "eslint --ignore-path .gitignore .",
    "test": "npm run build && npm run test:base",
    "test:ci": "npm run test:base && codecov",
    "test:base": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "npm-check-updates": "^3.1.12",
    "prettier": "^1.18.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "allowAfterSuper": true,
          "allow": [
            "__iterator"
          ]
        }
      ],
      "no-cond-assign": [
        "error",
        "except-parens"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
